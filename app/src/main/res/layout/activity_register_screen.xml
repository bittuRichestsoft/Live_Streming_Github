<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.pedro.streamer.auth.vm.RegisterViewModel" />
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.RegisterScreen">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/your_logo"
                    android:padding="@dimen/_20sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Sign up"
                android:textSize="@dimen/_22sdp"
                android:textColor="@color/black"
                />


           <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"   >



            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_layout_b">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/llName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:hintTextAppearance="@style/TextLabel"
                    android:hint="Name"
                    android:orientation="vertical"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:errorEnabled="false"
                    app:hintTextColor="@color/black"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingBottom="2dp"
                        android:background="@color/transparent"
                        android:focusable="true"
                        android:text=""
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/inter_regular"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="12sp" />


                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_layout_b">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/llEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:hintTextAppearance="@style/TextLabel"
                    android:hint="Email ID"
                    android:orientation="vertical"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:errorEnabled="false"
                    app:hintTextColor="@color/black"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingBottom="2dp"
                        android:background="@color/transparent"
                        android:focusable="true"
                        android:text=""
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/inter_regular"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="12sp" />


                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility = "gone"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_layout_b">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/llPsd"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:hintTextAppearance="@style/TextLabel"
                    android:hint="Password"
                    android:orientation="vertical"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:errorEnabled="false"
                    app:hintTextColor="@color/black"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPsd"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingBottom="2dp"
                        android:background="@color/transparent"
                        android:focusable="true"
                        android:text=""
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/inter_regular"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"

                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="12sp" />


                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility = "gone"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_layout_b">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/llConPsd"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:hintTextAppearance="@style/TextLabel"
                    android:hint="Confirm Password"
                    android:orientation="vertical"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:errorEnabled="false"
                    app:hintTextColor="@color/black"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConPsd"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingBottom="2dp"
                        android:background="@color/transparent"
                        android:focusable="true"
                        android:text=""
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/inter_regular"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="12sp" />


                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_layout_b">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/llPhone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:hintTextAppearance="@style/TextLabel"
                    android:hint="Phone Number"
                    android:orientation="vertical"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:errorEnabled="false"
                    app:hintTextColor="@color/black"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingBottom="2dp"
                        android:background="@color/transparent"
                        android:focusable="true"
                        android:text=""
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/inter_regular"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="12sp" />


                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

<!--"phoneNumber" : "+91 7889024783",-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility = "gone"
                android:layout_marginTop="@dimen/_12sdp"
                android:gravity="center|left">

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_24sp"
                    android:layout_centerVertical="true"
                    android:buttonTint="@color/grey"
                    android:fontFamily="@font/inter_regular"
                    android:text="I accept the "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvTermCond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/checkbox"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/inter_bold"
                    android:text="Terms of use"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/tvAnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tvTermCond"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/inter_regular"
                    android:text=" and "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="visible" />
                <TextView
                android:id="@+id/tvPrivacyPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tvAnd"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/inter_bold"
                android:text="Privacy policy"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible" />

            </RelativeLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegister"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:visibility="visible"
                app:cornerRadius="@dimen/_8sdp" />

            <TextView
                android:id="@+id/tv_goToLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Login to your Account"
                android:textColor="@color/black"
                android:clickable="true"
                android:fontFamily="@font/inter_bold"
                android:textSize="@dimen/_12sdp"
                android:visibility="visible"
                android:gravity="center_horizontal"
                android:textAlignment="center"

                android:layout_marginTop="@dimen/_24sdp"

                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>

</layout>